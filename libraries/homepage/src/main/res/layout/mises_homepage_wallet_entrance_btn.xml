<?xml version="1.0" encoding="utf-8"?><!--total height 84dp-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mises_homepage_wallet_entrance_height">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/walletBtnRoot"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/mises_ripple_wallet"
        android:paddingStart="15dp"
        android:paddingEnd="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/walletIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/mises_ntp_hp_wallet" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/walletBtnTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:maxLines="1"
            android:text="@string/mises_hp_wallet_entrance_btn_title"
            android:textColor="@color/mises_color_text_title"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/subTitle"
            app:layout_constraintEnd_toStartOf="@+id/arrowRight"
            app:layout_constraintStart_toEndOf="@+id/walletIcon"
            app:layout_constraintTop_toTopOf="@+id/walletIcon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:text="@string/mises_hp_wallet_entrance_btn_subtitle"
            android:textColor="@color/mises_color_text_value"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/walletIcon"
            app:layout_constraintEnd_toEndOf="@+id/walletBtnTitle"
            app:layout_constraintStart_toStartOf="@+id/walletBtnTitle"
            app:layout_constraintTop_toBottomOf="@+id/walletBtnTitle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrowRight"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/mises_ntp_arrow_right" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>