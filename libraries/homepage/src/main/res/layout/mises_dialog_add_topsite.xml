<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mises_dialog_add_topsite_bg"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_web_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mises_search_box_bg"
        android:gravity="center_vertical"
        android:hint="Enter website name"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#333333"
        android:textColorHint="#999999"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_web_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mises_search_box_bg"
        android:gravity="center_vertical"
        android:hint="Enter website address"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:text="https://"
        app:layout_constraintTop_toBottomOf="@+id/input_web_name" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#d1d1d1"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#333333"
        app:cornerRadius="60dp"
        app:layout_constraintEnd_toStartOf="@+id/ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_web_address" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#d1d1d1"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="#6200EA"
        app:cornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toTopOf="@+id/cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>